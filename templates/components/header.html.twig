{% set links =  [
    { href: path('app_home'), label: 'home'|trans, icon: 'house', path: null },
    { href: path('spots'), label: 'spots'|trans, icon: 'umbrella-beach', path: '/spots' },
    { href: path('general_rules'), label: 'general_rules'|trans, icon: 'scroll', path: '/general-rules' },
] %}
<nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="{{ asset('logo.png') }}" class="img-fluid" style="width: 80px" alt="logo">
            <span>{{ 'main_title'|trans }}</span>
        </a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto my-2 my-lg-0">
                {% for link in links %}
                    {% set isActive = (link.path is null and app.request.pathInfo in ['/', '']) or link.path in app.request.pathInfo %}
                    <li class="nav-item">
                        <a class="nav-link {{ isActive ? 'active text-decoration-underline  ' : '' }}"
                           href="{{ link.href }}">
                            <i class="me-2 fa fa-{{ link.icon }}"></i>
                            <span>
                                {{ link.label }}
                            </span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</nav>
