{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="#page-top">{{ 'main_title'|trans }}</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                    aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto my-2 my-lg-0">
                    <li class="nav-item"><a class="nav-link" href="#about">{{ 'members'|trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#spot_1">{{ 'spot_1'|trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#spot_2">{{ 'spot_2'|trans }}</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <header class="masthead"
            style="background: linear-gradient(to bottom, rgba(92, 77, 66, 0.8) 0%, rgba(92, 77, 66, 0.8) 100%), url({{ asset('build/img/home.gif') }});">
        <div class="container px-4 px-lg-5 h-100">
            <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-8 align-self-end">
                    <h1 class="text-white font-weight-bold">{{ 'main_title'|trans }}</h1>
                    <hr class="divider"/>
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 mb-5">
                        {{ 'main_subtitle_1'|trans }}<br/><br/>
                        {{ 'main_subtitle_2'|trans }}<br/><br/>
                        {{ 'main_subtitle_3'|trans }}<br/>
                    </p>
                    <a class="btn btn-primary btn-xl" href="#about">{{ 'discover_association'|trans }}</a>
                </div>
            </div>
        </div>
    </header>
    <section class="page-section bg-primary" id="about">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="text-white mt-0">{{ 'where_to_find_members'|trans }}</h2>
                    <h6 class="text-white mt-0">{{ 'where_to_find_members_title_1'|trans }}
                        : {{ 'where_to_find_members_title_2'|trans }}</h6>
                    <hr class="divider divider-light"/>
                    <div class="row">
                        <div class="col col-12 col-md-6 d-flex flex-column align-content-center justify-content-between">
                            <p class="text-white-75 mb-4">
                                {{ 'where_to_find_members_spot_1' |trans }}
                            </p>
                            <a class="btn btn-light btn-xl" href="#spot_1">{{ 'spot_1' |trans }}</a>
                        </div>
                        <div class="col-12 col-md-6">
                            <p class="text-white-75 mb-4">{{ 'where_to_find_members_spot_2' |trans }}</p>
                            <a class="btn btn-light btn-xl" href="#spot_2">{{ 'spot_2' |trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="spot_1">
        <div class="portfolio">
            <h2 class="text-primary mt-0 text-center py-4">{{ 'spot_1'|trans }}</h2>
            <div class="container-fluid p-0">
                <div class="row g-0">
                    <div class="col-12">
                        <a class="portfolio-box" href="{{ asset('build/img/trou.jpg') }}"
                           title="Project Name">
                            <img class="img-fluid" src="{{ asset('build/img/trou.jpg') }}" alt="..."/>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="spot_2">
        <div class="portfolio">
            <h2 class="text-primary mt-0 text-center py-4">{{ 'spot_2'|trans }}</h2>
            <div class="container-fluid p-0">
                <div class="row g-0">
                    <div class="col-12">
                        <a class="portfolio-box" href="{{ asset('build/img/gendarmerie.jpg') }}"
                           title="Project Name">
                            <img class="img-fluid" src="{{ asset('build/img/gendarmerie.jpg') }}" alt="..."/>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="d-grid gap-2 p-5">
        <a class="btn btn-lg btn-primary" href="{{ path('spots') }}">
            {{ 'see_all_spots'|trans }}
        </a>
    </div>
    <footer class="bg-light py-5">
        <div class="container px-4 px-lg-5">
            <div class="small text-center text-muted">
                {{ 'copyright'|trans }}
                <a class="ms-4" href="{{ path('general_rules') }}">{{ 'general_rules'|trans }}</a>
            </div>
        </div>
    </footer>
{% endblock %}
