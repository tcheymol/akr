{% set offset = index is odd ? 1 : 0 %}
{% set color = 'light' %}
{% set textColor = 'primary' %}
<section class="col-12 col-xl-11 offset-xl-{{ offset }}">
    <div class="card bg-{{ color }} mb-0 text-{{ textColor }}">
        <div class="card-header">{{ spot.name|upper }}</div>
        <div class="card-body">
            {% if spot.subtitle %}
                <h5 class="card-title text-center">{{ spot.subtitle|raw }}</h5>
                <hr class="divider"/>
            {% endif %}
            <div class="card-text">
                {% if spot.position %}<p><b><u>{{ 'position'|trans }}</u></b> : {{ spot.position|raw }}</p>{% endif %}
                {% if spot.access %}<p><b><u>{{ 'access'|trans }}</u></b> : {{ spot.access|raw }}</p>{% endif %}
                {% if spot.description %}<p><b><u>{{ 'description'|trans }}</u></b> : {{ spot.description|raw }}
                    </p>{% endif %}
                {% if spot.orientation %}<p><b><u>{{ 'orientation'|trans }}</u></b> : {{ spot.orientation|raw }}
                    </p>{% endif %}
                {% if spot.water %}<p><b><u>{{ 'water'|trans }}</u></b> : {{ spot.water|raw }}</p>{% endif %}
                {% if spot.dangers %}<p><b><u>{{ 'dangers'|trans }}</u></b> : {{ spot.dangers|raw }}</p>{% endif %}
                {% if spot.more %}<p><b><u>{{ 'more'|trans }}</u></b> : {{ spot.more|raw }}</p>{% endif %}
                {% if spot.security %}<p><b><u>{{ 'security'|trans }}</u></b> : {{ spot.security|raw }}</p>{% endif %}
            </div>
        </div>
        <img class="card-img-top" src="{{ spot.pictureUrl }}" alt="Spot image">
    </div>
</section>


