{% extends 'base.html.twig' %}

{% block title %}{{ 'login'|trans }}{% endblock %}

{% block mainSection %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row">
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <form action="{{ path('login') }}" method="post">
                <div class="form-group my-4">
                    <label for="username">{{ 'email'|trans }}</label>
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}"/>
                </div>

                <div class="form-group my-4">
                    <label for="password">{{ 'password'|trans }}</label>
                    <input type="password" id="password" name="_password" class="form-control"/>
                </div>

                <button type="submit" class="col-12 btn btn-primary btn-lg">{{ 'login'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block mainSectionBottom %}
{% endblock %}
