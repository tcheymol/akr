{% extends 'base.html.twig' %}

{% block title %}{{ 'discover_association'|trans }}{% endblock %}

{% block mainSection %}
    <h2 class="text-center font-weight-bold">{{ 'the_association'|trans }}</h2>
    <hr class="divider"/>
    <p>{{ associationIntro|raw }}</p>
{% endblock %}

{% set sections = [
    {'title': '','content': associationBody},
] %}

{% block body %}
    {% for index, section in sections %}
        {{ include('components/basic_section.html.twig', {
            'title': section.title,
            'content': section.content,
            'color': index is odd ? 'light' : 'primary',
            'isLast': loop.last,
        }) }}
    {% endfor %}
{% endblock %}

