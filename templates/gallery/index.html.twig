{% extends 'base.html.twig' %}

{% block title %}{{ 'gallery'|trans }}{% endblock %}

{% block mainSection %}
    <div class="portfolio p-0">
        <div class="container-fluid p-0">
            <div class="row g-0">
                {% for image in images %}
                    <div class="col-4">
                        <a class="portfolio-box" href="{{ image.url }}" target="_blank"
                           title="{{ image.fileName }}">
                            <img class="img-fluid" src="{{ image.url }}" alt="{{ image.fileName }}"/>
                            <div class="portfolio-box-caption">
                                <div class="project-name">{{ image.fileName }}</div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block mainSectionBottom %}

{% endblock %}