{% extends 'base.html.twig' %}

{% block title %}{{ 'spots'|trans }}{% endblock %}

{% block body %}
    {{ include('components/header.html.twig', {links: []}) }}
    <header class="masthead"
            style="
                    background: linear-gradient(to bottom, rgba(92, 77, 66, 0.8) 0%, rgba(92, 77, 66, 0.8) 100%), url({{ asset('build/img/home.gif') }});
                    height: auto;
                    ">
        <div class="container px-4 px-lg-5 h-100 py-5">
            <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-start text-white">
                <h2 class="text-center font-weight-bold">{{ 'spots'|trans }}</h2>
                <hr class="divider"/>
                <p>{{ 'spots_intro_1'|trans }}</p>
                <p>{{ 'spots_intro_2'|trans }}</p>
                <p>{{ 'spots_intro_3'|trans }}</p>
                <p>{{ 'spots_intro_4'|trans }}</p>
                <p>{{ 'spots_intro_5'|trans }}</p>
                <hr class="divider"/>
                <h2 class="text-center font-weight-bold">{{ 'general_spots_rules'|trans }}</h2>
                <hr class="divider"/>
                <p>{{ 'general_spots_rules_1'|trans|raw }}</p>
                <p>{{ 'general_spots_rules_2'|trans|raw }}</p>
                <p>{{ 'general_spots_rules_3'|trans|raw }}</p>
                <p>{{ 'general_spots_rules_4'|trans|raw }}</p>
                <p>{{ 'general_spots_rules_5'|trans|raw }}</p>
                <p>{{ 'general_spots_rules_6'|trans|raw }}</p>
                <p class="text-center">{{ 'general_spots_rules_7'|trans|raw }}</p>
            </div>
        </div>
    </header>
    <div class="container pt-0 pt-lg-0 p-4 p-lg-5">
        {% for index, spot in spots %}
            <hr class="divider"/>
            {{ include('spots/spot.html.twig', { index, spot }) }}
        {% endfor %}
    </div>
    <footer class="bg-light py-5">
        <div class="container px-4 px-lg-5">
            <div class="small text-center text-muted">
                {{ 'copyright'|trans }}
                <a class="ms-4" href="{{ path('general_rules') }}">{{ 'general_rules'|trans }}</a>
            </div>
        </div>
    </footer>
{% endblock %}
