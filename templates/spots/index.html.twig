{% extends 'base.html.twig' %}

{% block title %}{{ 'spots'|trans }}{% endblock %}

{% block mainSection %}
    <h2 class="text-center font-weight-bold">{{ 'spots'|trans }}</h2>
    <hr class="divider"/>
    {{ spotsIntro|raw }}
    <hr class="divider"/>
    <h2 class="text-center font-weight-bold">{{ 'general_spots_rules'|trans }}</h2>
    <hr class="divider"/>
    {{ spotsRecommendations|raw }}
{% endblock %}

{% block body %}
    <div class="container pt-0 pt-lg-0 p-4 p-lg-5">
        {% for index, spot in spots %}
            <hr class="divider"/>
            {{ include('spots/spot.html.twig', { index, spot }) }}
        {% endfor %}
    </div>
{% endblock %}
